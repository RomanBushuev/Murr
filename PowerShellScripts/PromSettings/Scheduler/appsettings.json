{
  "SchedulerServiceConfige": {
    "Configuration": "Production",
    "ServiceName": "ProdScheduler",
    "Interval": 30,
    "KarmaAdmin": "User ID=karma_admin;Password=karma_admin;Host=localhost;Port=5432;Database=karma;",
    "KarmaDownloader": "User ID=karma_downloader;Password=karma_downloader;Host=localhost;Port=5432;Database=karma;"
  },
  "NLog": {
    "internalLogLevel": "Info",
    "internalLogFile": "c:\\Users\\Public\\internal-nlog.txt",
    "targets": {
      "logfile": {
        "type": "File",
        "fileName": "c:\\Users\\Public\\Test.Murzik.SchedulerService\\SchedulerService.${shortdate}.log",
        "layout": "${longdate}|${message}${onexception:${exception:format=Type,Message,StackTrace,Data}}"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}
